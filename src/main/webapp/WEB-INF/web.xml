<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
        metadata-complete="false">
    <servlet>
        <servlet-name>addMenu</servlet-name>
        <servlet-class>com.Order.HandleMenu_Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addMenu</servlet-name>
        <url-pattern>/addMenu</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addMessage</servlet-name>
        <servlet-class>com.MessageBoard.Message_Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addMessage</servlet-name>
        <url-pattern>/addMessage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.RegisterAndLogin.Login_Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.RegisterAndLogin.Register_Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>punch</servlet-name>
        <servlet-class>com.RegisterAndLogin.Punch_Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>punch</servlet-name>
        <url-pattern>/punch</url-pattern>
    </servlet-mapping>
</web-app>
